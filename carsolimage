var x, image_url, item;

// Describe this function...
function showimages(x) {
  if(--window.LoopTrap <= 0) throw "Infinite loop.";
  let element_image_list = document.getElementById('image_list');
  element_image_list.replaceChildren();
  image_url.forEach((item) => {
    let new_img = document.createElement('img');
    new_img.setAttribute("src", item);

    element_image_list.appendChild(new_img);
  });
}


image_url = ['https://thumbs.dreamstime.com/b/aster-flowers-art-design-26968847.jpg', 'https://cdn.pixabay.com/photo/2013/07/21/13/00/rose-165819__340.jpg', 'https://images.pexels.com/photos/60597/dahlia-red-blossom-bloom-60597.jpeg'];


document.getElementById('next').addEventListener('click', (event) => {
  let element_image = document.getElementById('image');
  element_image.setAttribute("src", image_url[0]);
  image_url.push(image_url[0]);
  image_url.shift();

});

document.getElementById('previous').addEventListener('click', (event) => {
  let element_image2 = document.getElementById('image');
  element_image2.setAttribute("src", image_url.slice(-1)[0]);
  image_url.unshift(image_url.slice(-1)[0]);
  image_url.pop();

});
